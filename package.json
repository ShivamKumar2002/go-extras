{
  "name": "go-extras",
  "displayName": "Go Extras",
  "description": "Advanced Go development features that extend beyond the official VS Code Go extension.",
  "publisher": "shivamkumar",
  "version": "1.0.0",
  "icon": "images/logo.png",
  "keywords": [
    "go",
    "golang",
    "references",
    "filtering",
    "gopls",
    "filter references"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ShivamKumar2002/go-extras.git"
  },
  "bugs": {
    "url": "https://github.com/ShivamKumar2002/go-extras/issues"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "go-extras.filterReferences",
        "title": "Go Extras: Filtered References",
        "category": "Go Extras"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorLangId == go",
          "command": "go-extras.filterReferences",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "go-extras.filterReferences",
        "key": "alt+shift+r",
        "when": "editorLangId == go"
      }
    ],
    "viewsContainers": {
      "panel": [
        {
          "id": "goExtrasPanel",
          "title": "Go Extras",
          "icon": "$(list-filter)"
        }
      ]
    },
    "views": {
      "goExtrasPanel": [
        {
          "id": "goExtrasReferencesView",
          "name": "Filtered References",
          "type": "webview",
          "icon": "$(list-filter)",
          "contextualTitle": "Go References"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "10.0.10",
    "@types/node": "22.13.16",
    "@types/trusted-types": "2.0.7",
    "@types/vscode": "1.98.0",
    "@typescript-eslint/eslint-plugin": "8.29.0",
    "@typescript-eslint/parser": "8.29.0",
    "@vscode/test-cli": "0.0.10",
    "@vscode/test-electron": "2.4.1",
    "esbuild": "0.25.2",
    "eslint": "9.23.0",
    "npm-run-all2": "7.0.2",
    "typescript": "5.8.2"
  },
  "dependencies": {
    "@vscode-elements/elements": "^1.14.0",
    "@vscode/codicons": "^0.0.36"
  }
}
