{
  "name": "go-extras",
  "displayName": "GO Extras",
  "description": "Extends functionality of Go Extension in VSCode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "go-extras.filterReferences",
        "title": "Go Extras: Filtered References",
        "category": "Go Extras"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorLangId == go",
          "command": "go-extras.filterReferences",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "go-extras.filterReferences",
        "key": "alt+shift+r",
        "when": "editorLangId == go"
      }
    ],
    "viewsContainers": {
      "panel": [
        {
          "id": "goExtrasPanel",
          "title": "Go Extras",
          "icon": "$(list-filter)"
        }
      ]
    },
    "views": {
      "goExtrasPanel": [
        {
          "id": "goExtrasReferencesView",
          "name": "Go Extras: Filtered References",
          "type": "webview",
          "icon": "$(list-filter)",
          "contextualTitle": "Go References"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/trusted-types": "^2.0.7",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.25.0",
    "eslint": "^9.21.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@vscode-elements/elements": "^1.14.0",
    "@vscode/codicons": "^0.0.36"
  }
}
